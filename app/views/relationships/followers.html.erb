<% if current_user.following?(@user) %>
  <table>
    <%= @user.each do |user| %>
      <tr>
        <td><%= user.get_profile_image, size: '40x40' %></td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.following.count %></td>
        <td>フォロワー数：<%= user.followed.count %></td>
        <td>
          <%= link_to 'show', user_path(user) %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <h2>ユーザーはいません</h2>
<% end %>
  