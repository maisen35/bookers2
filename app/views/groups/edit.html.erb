<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <h2>Editing Group</h2>
      <%= form_with model: @group do |f| %>
        <div>
          <%= f.label :name, 'グループ名' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div>
          <%= f.label :introduction, '紹介文' %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div>
          <%= f.label :image_id, 'グループ画像' %>
          <%= f.file_field :image_id %>
        </div>
        <div>
          <%= f.submit 'Update Group', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>