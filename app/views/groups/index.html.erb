<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>名前</th>
          <th>紹介文</th>
        </tr>
        <% @groups.each do |group| %>
          <tr>
            <td><%= image_tag group.get_image_id, size: '40x40' %></td>
            <td>
              <%= link_to group_path(group) do %>
                <%= group.name %>
              <% end %>
            </td>
            <td><%= group.introduction %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>